ourServicesButton = clickable {
    cssSelector 'a[href=\'#services\']'
    descendantOf {
        className 'lane-welcome-main'
    }
    xpath '/html[1]/body[1]/router-view[1]/welcome-main-lane[1]/div[1]/div[3]/a[1]'
