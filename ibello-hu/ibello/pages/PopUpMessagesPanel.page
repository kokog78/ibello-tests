errorMessage = element {
    className 'error'
    descendantOf {
        cssSelector 'toast-component'
    }
    assume_error_message_is_displayed = assume toBe displayed
    assume_error_message_is_not_displayed = assume toNotBe displayed
}

successMessage = element {
    className 'success'
    descendantOf {
        cssSelector 'toast-component'
    }
    assume_success_message_is_displayed = assume toBe displayed
    assume_success_message_is_not_displayed = assume toNotBe displayed
}
