  "testSteps": [
    {
      "text": "Given Message: i want to send a new message",
      "condition": ""
    },
    {
      "text": "When Message: the name will be invalid",
      "condition": "name"
    },
    {
      "text": "When Message: the email will be invalid",
      "condition": "email"
    },
    {
      "text": "When Message: the subject will be invalid",
      "condition": "subject"
    },
    {
      "text": "When Message: the message will be invalid",
      "condition": "message"
    },
    {
      "text": "When Message: i send the message",
      "condition": ""
    },
    {
      "text": "Then Message: i see that the there is an error message",
      "condition": "errorMessages"
    },
    {
      "text": "Then Message: i see that there is no error message",
      "condition": "!errorMessages"
    }
  ],
  "scenarioNames": [
